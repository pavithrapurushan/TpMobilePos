        <!--android:drawableRight="@drawable/search"-->
        <!--android:textStyle="bold"-->
        <!--android:singleLine="true"/>-->
    <TextView
        android:layout_width="958px"
        android:textSize="64px"
        android:textColor="#FFBB33"
        android:layout_height="57px"
        android:background="@android:color/transparent"
        android:layout_marginTop="40px"
        android:layout_marginLeft="128px"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_marginTop="111px"
        android:layout_marginLeft="128px"
        android:layout_marginRight="128px"
        android:background="@drawable/batchline"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rectangletop"
            android:layout_width="match_parent"
            android:layout_height="66px"
            android:orientation="horizontal"
            android:layout_marginLeft="128px"
            android:layout_marginRight="128px"
            android:layout_marginTop="135px"
            android:background="@drawable/batchlist"
            android:paddingLeft="5px"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:text="#"
                android:textStyle="bold"

                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <!--android:textSize="@dimen/productandbatch_lvheader_text_size"-->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:text="Product Name"
                android:textStyle="bold"

                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <!--android:layout_width="175.45dp"  earlier width-->
            <!-- android:textSize="@dimen/productandbatch_lvheader_text_size"-->

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:text="Product Code"
                android:textStyle="bold"

                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <!--android:textSize="@dimen/productandbatch_lvheader_text_size"-->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:text="Manufacturer"
                android:textStyle="bold"

                android:textColor="@color/white"
                android:layout_height="wrap_content"/> <!--width edited by pavithra on 28-07-2020 -->
            <!--android:textSize="@dimen/productandbatch_lvheader_text_size"-->
            <!--width 150-->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.0"
                android:text="PmID"
                android:textStyle="bold"

                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:visibility="gone"/>   <!--Added by Pavithra on 01-07-2020-->
            <!--android:textSize="@dimen/productandbatch_lvheader_text_size"-->

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:text="MRP"
                android:textStyle="bold"

                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <!--android:textSize="@dimen/productandbatch_lvheader_text_size"-->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:text="SOH"

                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>  <!--width edited by pavithra on 28-07-2020 -->
            <!--android:layout_width="62.81dp"  previous-->
            <!--android:textSize="@dimen/productandbatch_lvheader_text_size"-->

        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="450px"
            android:id="@+id/product_listview"
            android:layout_marginLeft="128px"
            android:layout_marginRight="128px">
        </ListView>
    </LinearLayout>
</RelativeLayout>








