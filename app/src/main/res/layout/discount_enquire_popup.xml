<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#add8e6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/txvDiscEnquireTitleDialog"
        android:text="Add Discount"
        android:textColor="@color/black"
        android:background="@color/yellow"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_below="@+id/txvSaveTitleDialog"
        android:layout_marginTop="80dp">

        <!--following linearlayout added and content edited by Pavithra on 30-07-2020 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="5dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etAddDisc"
                android:hint="Add disc "
                android:textColor="#000000"
                android:gravity="center"
                android:singleLine="true"
                android:inputType="numberDecimal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="#000000"
                android:textSize="18sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancelPopUp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Cancel"
                android:background="@color/yellow"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnOkPopUp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Ok"
                android:background="@color/yellow"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <!--android:background="@drawable/button1"
        -->

    </LinearLayout>
</RelativeLayout>