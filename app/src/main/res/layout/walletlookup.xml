<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1090dp"
    android:background="#237C96"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title"
        android:gravity="center"
        android:textSize="36sp"
        android:background="#113A4E"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="Wallet Lookup"
        android:layout_width="1090dp"
        android:layout_height="50dp" />
    <Button
        android:onClick="closedlg"
        android:id="@+id/close_dialog"
        android:layout_marginLeft="1020dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/closebtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/l1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title"
        android:background="#113A4E"
        android:layout_width="1070dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="Wallet Id"
            android:gravity="right"
            android:layout_marginLeft="50dp"
            android:layout_width="120dp"
            android:layout_marginTop="16dp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_height="50dp"
            />

        <TextView
            android:text="Wallet Name"
            android:gravity="left"
            android:layout_marginLeft="200dp"
            android:layout_width="174.45dp"
            android:layout_marginTop="16dp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_height="50dp"
            />
        <TextView
            android:text="Company"
            android:gravity="left"
            android:layout_marginRight="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="350dp"
            android:layout_width="150dp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_height="50dp"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/walletlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical" />

</RelativeLayout>



