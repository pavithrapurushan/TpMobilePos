<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5px"
        android:gravity="center_vertical"
        android:background="@drawable/batchlst2">  <!--height edited by pavithra on 17-07-2020 -->
        <!--android:layout_height="56dp"-->
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/slno" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/name"/>
        <!--android:layout_width="175.45dp"--> <!-- earlier-->
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/code"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/manufacturer"/>  <!--height edited by pavithra on 17-07-2020 --> <!--width edited by pavithra on 28-07-2020 -->
        <!--android:layout_height="24dp"-->
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.0"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/pmid"
            android:visibility="gone"/>  <!--Added by Pavithra on 01-07-2020 -->
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/mrp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/soh"
            />  <!--width edited by pavithra on 28-07-2020 -->

    </LinearLayout>

</LinearLayout>







