<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#add8e6" />
            <gradient android:angle="-90" android:startColor="#add8e6" android:endColor="#FFFFFF"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#add8e6" />
            <gradient android:angle="-90" android:startColor="#FFFFFF" android:endColor="#add8e6" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#add8e6" />
            <gradient android:angle="-90" android:startColor="#FFFFFF" android:endColor="#add8e6" />
        </shape>
    </item>
</selector>